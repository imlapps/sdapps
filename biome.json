{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "data/**",
      "dist/**",
      ".next/**",
      "node_modules/**",
      "out/**",
      "packages/etl/__tests__/caches/**",
      "*.jsonld"
    ],
    "maxSize": 2097152
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "error",
        "useHookAtTopLevel": "error",
        "useImportExtensions": "off"
      },
      "nursery": {
        "noDuplicateElseIf": "error"
      },
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "useBlockStatements": "error",
        "useImportType": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
